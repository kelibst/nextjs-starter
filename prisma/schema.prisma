// This is your Prisma schema file
// Learn more: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// CORE MODELS - Main Branch
// ============================================================================

model User {
  id        String   @id @default(cuid())
  username  String?  @unique // Optional for OAuth users
  email     String   @unique
  password  String?  // Optional for OAuth-only users
  role      Role     @default(USER)

  // Email Verification
  emailVerified        Boolean   @default(false)
  verificationToken    String?   @unique
  verificationExpires  DateTime?

  // Password Reset
  passwordResetToken   String?   @unique
  passwordResetExpires DateTime?

  // Two-Factor Authentication (2FA)
  twoFactorEnabled Boolean  @default(false)
  twoFactorSecret  String?  // TOTP secret (encrypted)
  backupCodes      String[] // Array of hashed backup codes

  // OAuth Integration
  googleId          String?  @unique
  githubId          String?  @unique
  avatarUrl         String?  // Profile picture from OAuth provider
  registrationMethod String  @default("password") // "password" | "google" | "github"

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  refreshTokens RefreshToken[]
  invites       Invite[]
  activityLogs  ActivityLog[]

  @@index([email])
  @@index([username])
  @@index([verificationToken])
  @@index([passwordResetToken])
  @@index([googleId])
  @@index([githubId])
  @@map("users")
}

model RefreshToken {
  id        String   @id @default(cuid())
  token     String   @unique
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())

  // Relations
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([token])
  @@map("refresh_tokens")
}

model Invite {
  id        String    @id @default(cuid())
  email     String
  role      Role      @default(USER)
  token     String    @unique @default(cuid())
  expiresAt DateTime
  createdBy String
  createdAt DateTime  @default(now())
  usedAt    DateTime?

  // Relations
  creator User @relation(fields: [createdBy], references: [id], onDelete: Cascade)

  @@index([token])
  @@index([email])
  @@map("invites")
}

model ActivityLog {
  id         String    @id @default(cuid())
  userId     String?   // Nullable for failed login attempts
  action     String    // LOGIN, LOGOUT, CREATE_USER, UPDATE_USER, DELETE_USER, etc.
  resource   String?   // users, settings, invites, etc.
  resourceId String?   // ID of affected resource
  details    Json?     // Additional context (old/new values, etc.)
  ipAddress  String?
  userAgent  String?
  createdAt  DateTime  @default(now())

  // Relations
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@index([resource])
  @@map("activity_logs")
}

model SystemSettings {
  id        String   @id @default(cuid())
  key       String   @unique // Setting identifier
  value     Json     // Setting value (flexible for different types)
  updatedBy String?  // Admin who last updated
  updatedAt DateTime @updatedAt

  @@map("system_settings")
}

// ============================================================================
// ENUMS
// ============================================================================

enum Role {
  USER
  ADMIN
  SUPER_ADMIN
}
