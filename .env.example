# Database
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://authuser:authpassword@localhost:5432/authdb?schema=public"

# JWT Secrets
# IMPORTANT: Generate strong random secrets for production!
# You can use: openssl rand -base64 32
JWT_ACCESS_SECRET="change-this-to-a-random-secret-min-32-chars"
JWT_REFRESH_SECRET="change-this-to-another-random-secret-min-32-chars"

# JWT Configuration
JWT_ACCESS_EXPIRY="15m"      # Access token expiry (15 minutes)
JWT_REFRESH_EXPIRY="7d"      # Refresh token expiry (7 days)

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="NextAuth Starter"
NODE_ENV="development"

# Admin Panel Configuration
# Customize the admin panel path for additional security
# Default: /admin
# Example: /control-panel or /my-secret-admin-path
ADMIN_PATH="/admin"

# Default Super Admin Account
# IMPORTANT: Change these immediately after first login in production!
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_EMAIL="admin@example.com"
DEFAULT_ADMIN_PASSWORD="Admin123!"

# Cookie Configuration
COOKIE_SECURE="false"        # Set to "true" in production (HTTPS only)
COOKIE_DOMAIN="localhost"    # Set to your domain in production

# Security
# Set to "true" in production for additional security
ENABLE_RATE_LIMITING="false"
ENABLE_AUDIT_LOGGING="false"

# Email Service (Resend) - REQUIRED for email verification and password reset
# Get your API key from: https://resend.com/api-keys
RESEND_API_KEY="re_..."
FROM_EMAIL="noreply@yourdomain.com"  # Must be a verified sender domain

# Note: NEXT_PUBLIC_APP_URL is already defined above in App Configuration section
# It's used for email verification and password reset links

# Email Verification (optional - set to "true" to require email verification)
REQUIRE_EMAIL_VERIFICATION="false"

# Rate Limiting with Upstash Redis (optional but recommended for production)
# Without these, rate limiting is disabled (development mode)
# Get free tier at: https://upstash.com
UPSTASH_REDIS_REST_URL="https://xxx.upstash.io"
UPSTASH_REDIS_REST_TOKEN="xxx"

# Optional: OAuth Providers (for future feature/oauth branch)
# Uncomment when merging feature/oauth
# GOOGLE_CLIENT_ID="..."
# GOOGLE_CLIENT_SECRET="..."
# GITHUB_CLIENT_ID="..."
# GITHUB_CLIENT_SECRET="..."
