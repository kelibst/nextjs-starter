# Database
# PostgreSQL connection string
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA
DATABASE_URL="postgresql://authuser:authpassword@localhost:5432/authdb?schema=public"

# JWT Secrets
# IMPORTANT: Generate strong random secrets for production!
# You can use: openssl rand -base64 32
JWT_ACCESS_SECRET="change-this-to-a-random-secret-min-32-chars"
JWT_REFRESH_SECRET="change-this-to-another-random-secret-min-32-chars"

# JWT Configuration
JWT_ACCESS_EXPIRY="15m"      # Access token expiry (15 minutes)
JWT_REFRESH_EXPIRY="7d"      # Refresh token expiry (7 days)

# App Configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
NEXT_PUBLIC_APP_NAME="NextAuth Starter"
NODE_ENV="development"

# Admin Panel Configuration
# Customize the admin panel path for additional security
# Default: /admin
# Example: /control-panel or /my-secret-admin-path
ADMIN_PATH="/admin"

# Default Super Admin Account
# IMPORTANT: Change these immediately after first login in production!
DEFAULT_ADMIN_USERNAME="admin"
DEFAULT_ADMIN_EMAIL="admin@example.com"
DEFAULT_ADMIN_PASSWORD="Admin123!"

# Cookie Configuration
COOKIE_SECURE="false"        # Set to "true" in production (HTTPS only)
COOKIE_DOMAIN="localhost"    # Set to your domain in production

# Security
# Set to "true" in production for additional security
ENABLE_RATE_LIMITING="false"
ENABLE_AUDIT_LOGGING="false"

# Optional: Email Service (for feature branches)
# Uncomment when merging email-related features
# RESEND_API_KEY="re_..."
# EMAIL_FROM="noreply@yourdomain.com"

# Optional: OAuth Providers (for feature/oauth branch)
# Uncomment when merging feature/oauth
# GOOGLE_CLIENT_ID="..."
# GOOGLE_CLIENT_SECRET="..."
# GITHUB_CLIENT_ID="..."
# GITHUB_CLIENT_SECRET="..."

# Optional: Rate Limiting with Upstash (for feature/rate-limiting branch)
# Uncomment when merging feature/rate-limiting
# UPSTASH_REDIS_REST_URL="..."
# UPSTASH_REDIS_REST_TOKEN="..."
